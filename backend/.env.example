# Intelligent Investor Pro - Backend Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# Google AI (Gemini) Configuration
# ============================================
# Required: Get your API key from https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_gemini_api_key_here

# ============================================
# Application Settings
# ============================================
# Environment: development, staging, production
APP_ENV=development

# Enable debug mode (verbose logging)
DEBUG=true

# API prefix for all endpoints
API_PREFIX=/api/v1

# ============================================
# Data Paths
# ============================================
# Base directory for data files
DATA_DIR=../data

# Path to summary CSV (relative to backend directory)
CSV_PATH=../data/output/csv/summary.csv

# Directory containing per-stock JSON files
JSON_DIR=../data/output/json

# ============================================
# Caching Configuration
# ============================================
# Directory for file-based cache
CACHE_DIR=./cache

# Cache TTL (Time To Live) in seconds
EXTRACTION_CACHE_TTL=604800
VALUATION_CACHE_TTL=86400
ANALYSIS_CACHE_TTL=604800
PRICE_CACHE_TTL=30

# ============================================
# CORS Configuration
# ============================================
# Allowed origins for cross-origin requests (JSON array format)
CORS_ORIGINS=["http://localhost:3000"]
